  // Adjust glob patterns as your repo grows.
  "rules": [
    /* ───────────── Core source code ───────────── */
    { "pattern": "app/**/*.py",              "context": "include" },
    { "pattern": "app/**/*.sql",             "context": "include" },
    { "pattern": "Dockerfile",               "context": "include" },
    { "pattern": "requirements*.txt",        "context": "include" },

    /* ───────────── Infrastructure configs ────── */
    { "pattern": "openapi.yaml",             "context": "include" },
    { "pattern": ".github/**/*.yml",         "context": "include" },
    { "pattern": "cloudbuild.yaml",          "context": "include" },
    { "pattern": "infra/**",                 "context": "include" },

    /* ───────────── Documentation ─────────────── */
    { "pattern": "README.md",                "context": "include" },
    { "pattern": "docs/**/*.md",             "context": "include" },

    /* ───────────── Tests ─────────────────────── */
    { "pattern": "tests/**/*.py",            "context": "include" },

    /* ───────────── Large or irrelevant files (ignored) ───────── */
    { "pattern": "**/*.zip",                 "context": "exclude" },
